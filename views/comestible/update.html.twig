{% extends "@Energycalculator/baselayout.html.twig" %}

{% import "@Energycalculator/_form.html.twig" as forms %}

{% block title %}{{ parent() }} - {{ "comestible.title.update"|translate(locale) }}{% endblock %}

{% block container %}
    {% set comestible = element %}
    <div class="row">
        <div class="col-xs-12">
            <h1>{{ "comestible.title.update"|translate(locale) }}</h1>
            <form action="{{ path_for('comestible_update', {'locale': locale, 'id': comestible.id}) }}" method="post" class="form-horizontal">
                {{ forms.renderInputText({'model': comestible, 'property': 'name', 'label': 'comestible.label.name', 'errorMessages': errorMessages, 'locale': locale}) }}
                {{ forms.renderInputText({'model': comestible, 'property': 'calorie', 'label': 'comestible.label.calorie', 'errorMessages': errorMessages, 'locale': locale}) }}
                {{ forms.renderInputText({'model': comestible, 'property': 'protein', 'label': 'comestible.label.protein', 'errorMessages': errorMessages, 'locale': locale}) }}
                {{ forms.renderInputText({'model': comestible, 'property': 'carbohydrate', 'label': 'comestible.label.carbohydrate', 'errorMessages': errorMessages, 'locale': locale}) }}
                {{ forms.renderInputText({'model': comestible, 'property': 'fat', 'label': 'comestible.label.fat', 'errorMessages': errorMessages, 'locale': locale}) }}
                {{ forms.renderInputText({'model': comestible, 'property': 'defaultValue', 'label': 'comestible.label.defaultValue', 'errorMessages': errorMessages, 'locale': locale}) }}
                <input type="hidden" name="csrf" value="{{ csrf }}">
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-success" name="save" value="save" title="{{ "comestible.label.save"|translate(locale) }}">
                            <i class="glyphicon glyphicon-save"></i>
                        </button>
                        <a class="btn btn-default" href="{{ path_for('comestible_list', {'locale': locale}) }}" title="{{ "comestible.action.list"|translate(locale) }}">
                            <i class="glyphicon glyphicon-list-alt"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
