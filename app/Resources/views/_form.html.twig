{% macro renderCollection(model, property, propertyLabel, locale, fields) %}
    <div class="form-group">
        <label class="control-label col-lg-2" for="{{ property }}">{{ propertyLabel|translate(locale) }}</label>
        <div class="col-lg-10">
            <div id="{{ property }}" data-prototype="{{ _self.renderCollectionRow(property, '__name__', value, fields)|escape('html') }}">
                <ul class="bc-collection list-unstyled">
                    {% for key, value in model[property] %}
                        <li>
                            {{ _self.renderCollectionRow(property, key, value, fields) }}
                        </li>
                    {% endfor %}
                </ul>
                <a href="#" class="btn btn-primary btn-small" data-addfield="collection" data-collection="{{ property }}" data-prototype-name="__name__">--replace--</a>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro renderCollectionRow(property, key, value, fields) %}
    <div class="row">
        <div class="col-xs-12">
            <div id="{{ property }}_{{ key }}" class="form-groups">
                {% for field in fields %}
                    {{ attribute(_self, field.macro, [value]|merge(field.arguments)) }}
                {% endfor %}
            </div>
        </div>
        <div class="col-xs-12 col-lg-offset-2">
            <a href="#" class="btn btn-danger btn-small" data-removefield="collection" data-field="{{ property }}_{{ key }}">--replace--</a>
        </div>
    </div>
{% endmacro %}
